{% extends '@AcMarchePivot/layout.html.twig' %}

{% block body %}

    <h2>{{ hotels|length }} h√¥tels</h2>

    <div class="row">
        {% for hotel in hotels %}
            <div class="col-6 mb-2">
                <div class="card">
                    <h3 class="card-header">{{ hotel.nom }}</h3>
                    <div class="card-body">
                        <p><strong>{{ hotel.codeCgt }}</strong></p>
                        <p>
                            <strong>Categories</strong> {{ hotel.categories|join(',') }}
                        </p>
                        {% if hotel.tels|length > 1 %}
                            {{ dump(hotel.tels) }}
                        {% endif %}
                        {% if hotel.emails|length > 1 %}
                            {{ dump(hotel.emails) }}
                        {% endif %}
                        <br/>
                        {{ hotel.adresse1.rue }} {{ hotel.adresse1.numero }} <br/>
                        {{ hotel.adresse1.cp }} {{ hotel.adresse1.localiteByLanguage }}
                        ({{ hotel.adresse1.communeByLanguage }})<br/>
                        {{ hotel.adresse1.latitude }}<br/>
                        {% if hotel.email is defined %}
                            {{ hotel.email }}<br/>
                        {% endif %}
                        {% if hotel.tel is defined %}
                            {{ hotel.tel }}<br/>
                        {% endif %}
                        {{ hotel.homepage }} <br/>

                        <br/>
                        <div class="text-muted">
                            {{ hotel.description|raw }}<br/>
                            {{ hotel.tarif|nl2br }}
                        </div>
                        {% include '@AcMarchePivot/default/_specifications.html.twig' with {'entity': hotel} %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}