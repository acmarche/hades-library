{% extends '@AcMarchePivot/layout.html.twig' %}

{% block body %}

    <h2>{{ events|length }} Events</h2>
    <div class="row">
        {% for event in events %}
            <div class="col-6 mb-2">
                <div class="card">
                    <h3 class="card-header">{{ event.nom }}</h3>
                    {% if event.image is defined %}
                        <img src="{{ event.image }}" style="height: 150px;" class="card-img-top" alt="...">
                    {% endif %}
                    <div class="card-body">
                        <p><strong>{{ event.codeCgt }}</strong></p>
                        <p>
                            {{ event.dateBegin|format_date('full') }} au {{ event.dateEnd|format_date('full') }}
                        </p>
                        <p>
                            <strong>Categories</strong> {{ event.categories|join(',') }}
                        </p>
                        {% if event.tels|length > 1 %}
                            {{ dump(event.tels) }}
                        {% endif %}
                        {% if event.emails|length > 1 %}
                            {{ dump(event.emails) }}
                        {% endif %}
                        <br/>
                        {{ event.adresse1.cp }} {{ event.adresse1.localiteByLanguage }}
                        ({{ event.adresse1.communeByLanguage }})<br/>
                        {{ event.adresse1.latitude }}<br/>
                        {% if event.email is defined %}
                            {{ event.email }}<br/>
                        {% endif %}
                        {% if event.tel is defined %}
                            {{ event.tel }}<br/>
                        {% endif %}
                        <br/>
                        <div class="text-muted">
                            {{ event.description|raw }}<br/>
                            {{ event.tarif|nl2br }}
                        </div>
                        {% include '@AcMarchePivot/default/_specifications.html.twig' with {'entity': event}  %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}