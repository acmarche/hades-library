{% extends '@AcMarchePivot/layout.html.twig' %}

{% block body %}

    <div class="card">
        <h3 class="card-header">
            {{ offres|length }} offre(s) dans
            <strong>{{ typeOffreUrn.nom }}</strong> <span class="text-muted">{{ urn }}</span>
        </h3>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Localité</th>
                    <th>Catégories</th>
                </tr>
                </thead>
                <tbody>
                {% for offre in offres %}
                    <tr>
                        <td>{{ offre.nom }}</td>
                        <td>{{ offre.adresse.localiteByLanguage }}</td>
                        <td class="text-muted">
                            {% for categorie in offre.categories %}
                                {{ categorie.labelByLanguage }},
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
