{% extends '@AcMarchePivot/layout.html.twig' %}

{% block body %}

    <div class="card">
        <h3 class="card-header">Recherche</h3>
        <div class="card-body">

            {% include '@AcMarchePivot/typeoffre/_search.html.twig' %}

            <table class="table table-bordered table-striped">
                <tr>
                    <th>Nom</th>
                    <th>Mot clef</th>
                    <th></th>
                </tr>
                {% for typeOffre in typesOffre %}
                    <tr>
                        <td>{{ typeOffre }}</td>
                        <td>
                            <a href="{{ path('pivot_typeoffre_show', {'id': typeOffre.id}) }}" title="Traduire">
                                {{ typeOffre.urn }}
                            </a>
                        </td>
                        <td>
                            {% include '@AcMarchePivot/typeoffre/_flags.html.twig' %}
                        </td>
                        <td>
                            <a href="{{ path('pivot_typeoffre_edit', {'id': typeOffre.id}) }}" title="Traduire">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}

